<%- include('../include/head.ejs') %>

<body>
    <%- include('../include/topnav.ejs', {topnavproperties: topnavproperties}) %>
    
    <h1>Change Password</h1>

    <form id="form_profile_chgpwd" action="/profile/chgpwd" method="post">
        <input id="input_password" name="password" type="text" placeholder="password" autocomplete="off">
        <input id="input_confirmpassword" name="confirmpassword" type="text" placeholder="confirm password" autocomplete="off">
        <button id="button_submit" type="submit" form="form_profile_chgpwd"  class="btn btn-sm btn-primary">Submit</button>
    </form>
    <a id="link_cancel" href="/profile" class="btn btn-sm btn-danger">Cancel</a> 

    <!-- show link-->
    <% if (response.message) { %>
        <p>Reset password link: </p><a id="link_setpwd" href="<%=response.message%>"><%=response.message%></a>
    <% } %>

    <%- include('../include/response.ejs', {response: response}) %>
    <%- include('../include/alert.ejs', {response: response}) %>
    
</body>
